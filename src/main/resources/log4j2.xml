<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="FileOutput" fileName="${log-path}/application.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!--<RollingFile name="RollingFile" fileName="${log-path}/application.log"
                     filePattern="${log-path}/$${date:yyyy-MM}/application-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1 KB"/>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>-->

    </Appenders>

    <Loggers>
        <Logger name="com.app.mvc" level="ALL">
            <AppenderRef ref="FileOutput"/>
        </Logger>

        <Root level="ALL">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>